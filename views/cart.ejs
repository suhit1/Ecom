<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart</title>
    <link rel="stylesheet" href="style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('partials/header',{username,isloggedin}) %> <% if(error) { %>
    <h1>Your Cart is Empty!!!</h1>
    <% } else { %>
    <button class="btn-lg btn-warning checkou_btnt">
      <a class="a-checkout" href="/checkout">Checkout</a>
    </button>
    <div id="grad1" class="row outside_div">
      <% cart_data.forEach((product)=>{ %>
      <div class="product_box col-sm-3">
        <div class="inside_div">
          <img class="product_image" src="<%= product.image %>" alt="Image" />
          <h3 class="product_name"><%= product.name %></h3>
          <h3 class="product_price">Rs. <%= product.price %></h3>
          <h3 class="product_quantity">
            Quantity : <%= product.cart_quantity %>
          </h3>
          <% if(quantity) { %>
          <p><%= quantity %> <% } %></p>
          <button class="btn-lg btn-primary">
            <a
              style="text-decoration: none; color: white; font-size: 20px"
              href="/plus_quantity?product_id=<%=product.id%>"
              >+</a
            >
          </button>
          <button class="btn-lg btn-primary">
            <a
              style="text-decoration: none; color: white; font-size: 20px"
              href="/minus_quanity?product_id=<%=product.id%>"
              >-</a
            >
          </button>
          <button
            style="height: 6vh; position: relative; top: -5px"
            class="btn btn-lg btn-warning"
          >
            <a
              class="a_remove_Cart"
              href="/remove_product_id?product_id=<%=product.id%>"
              >Remove</a
            >
          </button>
        </div>
      </div>
      <% }) %>
    </div>

    <% } %>
  </body>
</html>
